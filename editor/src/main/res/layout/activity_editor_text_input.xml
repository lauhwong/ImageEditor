<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCancelInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/editor_cancel"
            android:textColor="@color/white_f"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvConfirmInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="@string/editor_complete"
            android:textColor="@color/green_btn"
            android:textSize="18sp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="top"
        android:inputType="none"
        android:maxLength="30"
        android:textColor="@color/white_f"
        android:textCursorDrawable="@null"
        android:textSize="25sp"
        tools:text="哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_33"
        android:gravity="center_vertical">

        <com.miracle.view.imageeditor.view.ColorSeekBar
            app:colorSeeds="@array/color_seeds"
            android:id="@+id/colorBarInput"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:barHeight="6dp"
            app:colorBarPosition="8"/>
    </RelativeLayout>

</LinearLayout>
